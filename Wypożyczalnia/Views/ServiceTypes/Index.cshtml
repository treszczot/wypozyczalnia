@model IEnumerable<Wypozyczalnia.Models.ServiceType>
@{
    ViewData["Title"] = "Index";
}

<br />
<h2>Zarządzaj rodzajami napraw</h2>
<hr />

<div class="form-border">
    <p>
        <a class="btn btn-sm btn-primary" asp-action="Create">Utwórz nową</a>
    </p>
    <br />

    <table class="table table-hover table-condensed">
        <tr>
            <th>
                Nazwa naprawy
                @*@Html.DisplayNameFor(m=>m.Name)*@
            </th>
            <th></th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        { 
            <tr>
                <td>
                    @Html.DisplayFor(m=>item.Name)
                </td>
                <td>
                    @Html.Partial("_TableButtonPartial", new IndividualButtonPartial { ServiceId = item.Id})
                </td>
            </tr>

        }
    </table>
</div>

