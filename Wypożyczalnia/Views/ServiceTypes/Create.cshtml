@model Wypozyczalnia.Models.ServiceType
@{
    ViewData["Title"] = "Utwórz";
}

<br />
<h2>Utwórz rodzaj usługi</h2>
<hr />

<form asp-action="Create">
    <div class="form-border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <div class="row">
                <div class="col-sm-1">
                    <label asp-for="Name" class="custom-label">Nazwa</label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="Name" class="form-control" />
                </div>
            </div>

            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <br />
        <div class="form-group">
            <input type="submit" value="Utwórz" class="btn btn-sm btn-primary" />
            <a asp-action="Index" class="btn btn-sm btn-success">Powrót do listy</a>
        </div>
    </div>
</form>

